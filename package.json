{
  "name": "gogherkinrunner",
  "displayName": "Go Gherkin Runner",
  "description": "Run single Gherkin scenarios in Go projects directly from VS Code without commenting!",
  "version": "0.0.2",
  "publisher": "AmirHosseinHanifehzadeh",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmirhosseinHanifehzadeh/G2R.git"
  },
  "keywords": [
    "gherkin",
    "cucumber",
    "go",
    "testing",
    "bdd",
    "feature",
    "scenario"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "icon": "images/G2R.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.feature",
    "onLanguage:feature",
    "onLanguage:gherkin"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "GoGherkinRunner.runSingleScenario",
        "title": "Run Single Scenario"
      },
      {
        "command": "GoGherkinRunner.debugSingleScenario",
        "title": "Debug Single Scenario"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}